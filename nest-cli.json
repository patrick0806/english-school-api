{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "assets": [
      { "include": "config/i18n/**/*", "watchAssets": true },
      {
        "include": "shared/providers/mail/templates/**/*",
        "watchAssets": true
      },
      { "include": "shared/providers/pdf/templates/**/*", "watchAssets": true }
    ]
  }
}
